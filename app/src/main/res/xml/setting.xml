<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/notification_category">

        <SwitchPreference
            android:key="@string/daily_reminder_key"
            android:defaultValue="false"
            android:title="@string/daily_reminder_title"
            android:summary="@string/daily_reminder_summary"/>

        <SwitchPreference
            android:key="@string/new_release_key"
            android:defaultValue="false"
            android:title="@string/new_release_title"
            android:summary="@string/new_release_summary"
            android:summaryOn="@string/new_release_summary_on"
            android:summaryOff="@string/new_release_summary_off"/>

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/setting_category">

        <Preference
            android:key="@string/locale_setting_key"
            android:title="@string/locale_setting_title"
            android:summary="@string/locale_setting_summary"/>

    </PreferenceCategory>
</PreferenceScreen>